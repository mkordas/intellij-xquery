<idea-plugin version="2">
    <extensions defaultExtensionNs="com.intellij">
        <programRunner implementation="org.intellij.xquery.runner.XQueryRunner"/>
        <configurationType implementation="org.intellij.xquery.runner.XQueryRunConfigurationType"/>
        <configurationProducer implementation="org.intellij.xquery.runner.XQueryRunConfigurationProducer"/>
        <applicationConfigurable instance="org.intellij.xquery.runner.options.XQueryRunnerConfigurable"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>org.intellij.xquery.runner.options.XQueryRunnerSettings</implementation-class>
        </component>
    </application-components>
</idea-plugin>